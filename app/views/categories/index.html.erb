<title>Kategorier</title>

<div id="categories" class="grid_24">

<h1>Kategorier</h1>

<table>

<% @categories.each do |c| %>

  <tr>
    <td><%= link_to c.name, c %>  </td>
    <td>  </td>
    <td>
      <% if can? :update, @category  %>
      <%= link_to 'Edit', edit_category_path(c) %>
      <% end %>
    </td>
    <td>
      <% if can? :destroy, @category %>
      <%= button_to "Slette", { :action => "destroy", :id => c.id },
            :confirm => "Are you sure?", :method => :delete %>
      <% end %>
     </td>
    <td></td> <!-- FÃ¥ opp antallet tekster i gitt kategori her? -->
  </tr>

  <tr>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
  </tr>

<% end %>
</table>

<% if can? :create, @category %>
  <%= link_to 'Ny kategori', new_category_path %>
<% end %>

</div>
